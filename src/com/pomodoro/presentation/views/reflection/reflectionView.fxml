        </VBox>

        <!-- Notes Section -->
        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <TextArea fx:id="reflectionArea"
                wrapText="true"
                styleClass="reflection-area"
                VBox.vgrow="ALWAYS" />
